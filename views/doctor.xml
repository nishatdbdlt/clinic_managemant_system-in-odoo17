<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ============================= -->
    <!--          MAIN MENU            -->
    <!-- ============================= -->

    <!-- ============================= -->
    <!--         TREE VIEW             -->
    <!-- ============================= -->
    <record id="view_clinic_doctor_tree" model="ir.ui.view">
        <field name="name">clinic.doctor.tree</field>
        <field name="model">clinic.doctor</field>
        <field name="arch" type="xml">
            <tree string="Doctors" default_order="name asc">
                <field name="image" widget="image" optional="hide"/>
                <field name="name"/>
                <field name="gender"/>
                <field name="specialization"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="consultation_fee"/>
                <field name="state"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- ============================= -->
    <!--          FORM VIEW            -->
    <!-- ============================= -->
    <record id="view_clinic_doctor_form" model="ir.ui.view">
        <field name="name">clinic.doctor.form</field>
        <field name="model">clinic.doctor</field>
        <field name="arch" type="xml">
            <form string="Doctor Form" create="true" edit="true">
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                        <field name="active"/>
                    </div>
                    <group>
                        <group>
                            <field name="image" widget="image" class="oe_avatar"/>
                            <field name="gender"/>
                            <field name="date_of_birth"/>
                            <field name="age" readonly="1"/>
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="address"/>
                        </group>
                        <group>
                            <field name="specialization"/>
                            <field name="license_number"/>
                            <field name="qualification"/>
                            <field name="experience_years"/>
                            <field name="joining_date"/>
                            <field name="consultation_fee"/>
                            <field name="consultation_duration"/>
                            <field name="state"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Availability">
                            <group>
                                <group>
                                    <field name="monday_available"/>
                                    <field name="tuesday_available"/>
                                    <field name="wednesday_available"/>
                                    <field name="thursday_available"/>
                                </group>
                                <group>
                                    <field name="friday_available"/>
                                    <field name="saturday_available"/>
                                    <field name="sunday_available"/>
                                </group>
                                <group>
                                    <field name="working_hours_start"/>
                                    <field name="working_hours_end"/>
                                </group>
                            </group>
                        </page>
                        <page string="Statistics">
                            <group>
                                <field name="total_appointments" readonly="1"/>
                                <field name="total_patients" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ============================= -->
    <!--           ACTION              -->
    <!-- ============================= -->
    <record id="action_clinic_doctor" model="ir.actions.act_window">
        <field name="name">Doctors</field>
        <field name="res_model">clinic.doctor</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Doctor record.
            </p>
        </field>
    </record>

    <!-- ============================= -->
    <!--           MENU ITEM           -->
    <!-- ============================= -->
     <menuitem id="menu_clinic_management"
              name="Clinic Management"
              sequence="1"
              web_icon="clinic_management_system,static/description/icon.png"/>

    <!-- Patient Submenu -->
    <menuitem id="menu_clinic_patient"
              name="Patients"
              parent="menu_clinic_management"
              action="action_clinic_patient"
              sequence="1"/>

    <!-- Admitted Patients Submenu -->
    <menuitem id="menu_clinic_admitted_patients"
              name="Admitted Patients"
              parent="menu_clinic_management"
              action="action_clinic_admitted_patients"
              sequence="2"/>
       <menuitem id="menu_doctor"
              name="Doctor"
              parent="menu_clinic_management"
              action="action_clinic_doctor"
              sequence="2"/>
     <menuitem id="menu_appointment"
              name="Appointment"
              parent="menu_clinic_management"
              action="action_clinic_appointment"
              sequence="2"/>

</odoo>
