<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Appointment Report Template -->
    <record id="action_report_appointment" model="ir.actions.report">
        <field name="name">Appointment Report</field>
        <field name="model">clinic.appointment</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">clinic_management_system.report_appointment_template</field>
        <field name="report_file">clinic_management_system.report_appointment_template</field>
        <field name="binding_model_id" ref="model_clinic_appointment"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_appointment_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Appointment Details</h2>
                        <div class="row mt32 mb32">
                            <div class="col-12">
                                <p><strong>Appointment #:</strong> <span t-field="doc.appointment_number"/></p>
                                <p><strong>Patient:</strong> <span t-field="doc.patient_id.name"/></p>
                                <p><strong>Doctor:</strong> <span t-field="doc.doctor_id.name"/></p>
                                <p><strong>Date:</strong> <span t-field="doc.appointment_date"/></p>
                                <p><strong>Status:</strong> <span t-field="doc.state"/></p>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>