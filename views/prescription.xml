<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Prescription Tree View -->
    <record id="view_clinic_prescription_tree" model="ir.ui.view">
        <field name="name">clinic.prescription.tree</field>
        <field name="model">clinic.prescription</field>
        <field name="arch" type="xml">
            <tree string="Prescriptions">
                <field name="prescription_number"/>
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <field name="prescription_date"/>
                <field name="diagnosis"/>
                <field name="follow_up_required" widget="boolean_toggle"/>
                <field name="state" widget="badge" decoration-info="state=='draft'" decoration-success="state=='confirmed'" decoration-primary="state=='dispensed'"/>
            </tree>
        </field>
    </record>

    <!-- Prescription Form View -->
    <record id="view_clinic_prescription_form" model="ir.ui.view">
        <field name="name">clinic.prescription.form</field>
        <field name="model">clinic.prescription</field>
        <field name="arch" type="xml">
            <form string="Prescription">
                <header>
                    <button name="action_confirm" string="Confirm" type="object" class="oe_highlight"/>
                    <button name="action_dispense" string="Dispense" type="object" class="oe_highlight"/>
                    <button name="action_print_prescription" string="Print" type="object"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,dispensed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="prescription_number" readonly="1"/></h1>
                    </div>
                    <group>
                        <group string="Patient Information">
                            <field name="patient_id" options="{'no_create': True}"/>
                            <field name="doctor_id" options="{'no_create': True}"/>
                            <field name="appointment_id"/>
                        </group>
                        <group string="Prescription Details">
                            <field name="prescription_date"/>
                        </group>
                    </group>

                    <group string="Clinical Information">
                        <group>
                            <field name="symptoms" placeholder="Patient symptoms..."/>
                            <field name="diagnosis" placeholder="Diagnosis..."/>
                        </group>
                        <group>
                            <field name="medical_advice" placeholder="Medical advice and instructions..."/>
                        </group>
                    </group>

                    <group string="Vital Signs">
                        <group>
                            <field name="blood_pressure" placeholder="e.g., 120/80"/>
                            <field name="temperature"/>
                            <field name="pulse_rate"/>
                        </group>
                        <group>
                            <field name="respiratory_rate"/>
                            <field name="oxygen_saturation"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Medicines">
                            <field name="prescription_line_ids">
                                <tree editable="bottom">
                                    <field name="medicine_name"/>
                                    <field name="dosage"/>
                                    <field name="frequency"/>
                                    <field name="duration"/>
                                    <field name="quantity"/>
                                    <field name="route"/>
                                    <field name="instructions"/>
                                </tree>
                            </field>
                        </page>

                        <page string="Follow-up">
                            <group>
                                <group>
                                    <field name="follow_up_required"/>
                                    <field name="follow_up_date"/>
                                </group>
                                <group>
                                    <field name="follow_up_notes"/>
                                </group>
                            </group>
                        </page>

                        <page string="Lab Tests">
                            <group>
                                <field name="lab_test_required"/>
                                <field name="lab_test_notes"/>
                            </group>
                        </page>

                        <page string="Additional Notes">
                            <field name="notes" placeholder="Any additional notes or instructions..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Prescription Search View -->
    <record id="view_clinic_prescription_search" model="ir.ui.view">
        <field name="name">clinic.prescription.search</field>
        <field name="model">clinic.prescription</field>
        <field name="arch" type="xml">
            <search string="Search Prescriptions">
                <field name="prescription_number"/>
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <field name="diagnosis"/>
                <filter string="Today" name="today" domain="[('prescription_date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter string="This Month" name="this_month" domain="[('prescription_date', '&gt;=', (context_today().replace(day=1)).strftime('%Y-%m-%d'))]"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Confirmed" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter string="Dispensed" name="dispensed" domain="[('state', '=', 'dispensed')]"/>
                <separator/>
                <filter string="Follow-up Required" name="followup_required" domain="[('follow_up_required', '=', True)]"/>
                <group expand="0" string="Group By">
                    <filter string="Doctor" name="doctor_group" context="{'group_by': 'doctor_id'}"/>
                    <filter string="Patient" name="patient_group" context="{'group_by': 'patient_id'}"/>
                    <filter string="Date" name="date_group" context="{'group_by': 'prescription_date'}"/>
                    <filter string="Status" name="state_group" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Prescription Action -->
    <record id="action_clinic_prescription" model="ir.actions.act_window">
        <field name="name">Prescriptions</field>
        <field name="res_model">clinic.prescription</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_today': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new prescription
            </p>
            <p>
                Click the create button to add a new prescription.
            </p>
        </field>
    </record>
</odoo>