<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Security Groups -->
    <record id="module_clinic_category" model="ir.module.category">
        <field name="name">Clinic Management</field>
        <field name="description">User access level for Clinic Management</field>
        <field name="sequence">10</field>
    </record>

    <record id="group_clinic_receptionist" model="res.groups">
        <field name="name">Receptionist</field>
        <field name="category_id" ref="module_clinic_category"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_clinic_doctor" model="res.groups">
        <field name="name">Doctor</field>
        <field name="category_id" ref="module_clinic_category"/>
        <field name="implied_ids" eval="[(4, ref('group_clinic_receptionist'))]"/>
    </record>

    <record id="group_clinic_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_clinic_category"/>
        <field name="implied_ids" eval="[(4, ref('group_clinic_doctor'))]"/>
    </record>

    <!-- Record Rules -->
    <record id="doctor_record_rule" model="ir.rule">
        <field name="name">Doctor: See own records</field>
        <field name="model_id" ref="model_clinic_doctor"/>
        <field name="domain_force">[('user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('clinic_management_system.group_clinic_doctor'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <record id="doctor_manager_rule" model="ir.rule">
        <field name="name">Manager: See all doctors</field>
        <field name="model_id" ref="model_clinic_doctor"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('clinic_management_system.group_clinic_manager'))]"/>
    </record>
</odoo>